{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "prettier",
    "overrides": [
        {
            "files": ["*.{json,ts,js,scss}"],
            "rules": {
                "indent": ["error", 4],
                "linebreak-style": ["error", "unix"]
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-confusing-arrow": ["error", { "allowParens": false }]
    }
}
